<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receivable_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ITN"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/receivable_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="40 PLN"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textColor="@color/primaryText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/due_date"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/receivable_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="26/04/2016"
            android:textAlignment="textEnd"
            android:textColor="@color/primaryText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/number_instalment"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/receivable_item_instalment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textAlignment="textEnd"
            android:textColor="@color/primaryText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total_number_of_instalments"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/receivable_item_total_instalment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textAlignment="textEnd"
            android:textColor="@color/primaryText"/>
    </LinearLayout>

</LinearLayout>